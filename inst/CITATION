citHeader("To cite package 'bcool' in publications use:")

desc <- packageDescription("bcool")
year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", desc$Date)
vers <- paste("R package version", desc$Version)

citEntry(entry="Manual",
         title = "bcool: Bringing to light significant Columns correlated with Organism Labels",
         author = personList(as.person("Hugo Naya"),
                             as.person("Lucia Spangenberg")),
         year = year,
         note = vers,

         textVersion =
         paste("Hugo Naya and Lucia Spangenberg (",
               year,
               "). bcool: Bringing to light significant Columns correlated with Organism Labels. ",
               vers, ".", sep=""))
